<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGray"
    tools:context="asak.pro.pinPotha.activities.PostListActivity">

    <asak.pro.pinPotha.adapters.CustomRecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></asak.pro.pinPotha.adapters.CustomRecyclerView>
    <TextView
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:id="@+id/empty_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Event Found"
        android:textSize="20sp" />
</RelativeLayout>
